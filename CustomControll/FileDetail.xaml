    <Grid Margin="0, 15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Path Data="{StaticResource DocIcon}"
              Fill="Silver"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Width="25"
              Stretch="Uniform"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock TextTrimming="CharacterEllipsis"
                       MaxWidth="200"
                       FontWeight="Bold"
                       Text="{Binding FileName, ElementName=this,
                        FallbackValue=FileName, TargetNullValue=FileName}"/>

                <TextBlock Grid.Column="1"
                       Padding="5,0"
                       Text="{Binding FileSize, ElementName=this,
                        FallbackValue=FileSizeInMb, TargetNullValue=FileSizeInMb}"/>


            </Grid>
            <!--Cancel button-->
            <Button BorderThickness="0"
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                <Path Data="{StaticResource CloseIcon}"
                        Fill="Gray"
                        Stretch="Uniform"
                        Height="7"/>
            </Button>

            <ProgressBar Name="pb"
                         Grid.Row="1"
                         Height="8"
                         Foreground="#47BDFF"
                         Value="{Binding UploadProgress, ElementName=this}"/>

            <TextBlock Grid.Row="2">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Text" Value="{Binding Value, 
                            ElementName=pb, StringFormat={}{0:##.0% done}}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Value,
                                ElementName=pb}" Value="100">
                                <Setter Property="Text" Value="Upload Completed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <TextBlock Grid.Row="2"
                       HorizontalAlignment="Right">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Text" Value="{Binding UploadSpeed, 
                            ElementName=this, StringFormat={}{0}kb/sec}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding FallbackValue,
                                ElementName=pb}" Value="100">
                                <Setter Property="Text" Value=""/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

        </Grid>
    </Grid>
</UserControl>
